# syntax=docker/dockerfile:1
FROM python:3.11-slim
WORKDIR /app
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

COPY app/requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt gunicorn

COPY README.md README.md
EXPOSE 5000
CMD ["cd", "app"]
